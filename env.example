# BBB Link Enhancer - Environment Variables
# Copie este arquivo para .env e configure com seus valores

# Cloudflare Workers
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_API_TOKEN=your-api-token
KV_NAMESPACE_ID=your-kv-namespace-id

# Database (Supabase ou PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Admin Panel
REACT_APP_API_URL=https://bbbrasil.com/api
REACT_APP_DOMAIN=https://bbbrasil.com

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this
API_KEY=sk_live_your-api-key-here
ADMIN_PASSWORD=change-this-password-immediately

# Affiliate Accounts
AMAZON_TAG=buscabr-20
MERCADOLIVRE_ID=MLB-123456
MAGALU_ID=your-magalu-id

# Analytics (opcional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
CLOUDFLARE_ANALYTICS_TOKEN=your-cf-analytics-token

# Email (para notificações)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
NOTIFICATION_EMAIL=admin@bbbrasil.com

# Redis (opcional, para cache avançado)
REDIS_URL=redis://localhost:6379

# Sentry (opcional, para error tracking)
SENTRY_DSN=https://xxx@sentry.io/xxx

# Environment
NODE_ENV=production
ENVIRONMENT=production

# Feature Flags
ENABLE_ADD_TO_CART=true
ENABLE_DEEP_LINKS=true
ENABLE_PWA=false
ENABLE_2FA=false

# Rate Limiting
RATE_LIMIT_CLICKS=100
RATE_LIMIT_API=60
RATE_LIMIT_WINDOW=60

# Storage
MAX_COOKIE_AGE=2592000
MAX_LOCALSTORAGE_ITEMS=100
CLICK_RETENTION_DAYS=90
CONVERSION_RETENTION_DAYS=365

# Webhooks
WEBHOOK_SECRET=your-webhook-secret
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx

# Cloudflare Pages (para admin)
CF_PAGES_PROJECT=bbb-admin
CF_PAGES_BRANCH=main

# Vercel (alternativa)
VERCEL_TOKEN=your-vercel-token
VERCEL_PROJECT_ID=your-project-id

# Debug
DEBUG=false
LOG_LEVEL=info
