rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // ✅ LINKS: Leitura pública (usuários precisam ler para serem redirecionados)
    // Mas escrita/edição/deleção apenas para usuários autenticados
    match /links/{document=**} {
      // ✅ LEITURA PÚBLICA - Qualquer um pode ler (necessário para /r/:linkId)
      allow read: if true;

      // ✅ ESCRITA RESTRITA - Apenas usuários autenticados
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    match /conversions/{document=**} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Permitir acesso público para analytics agregados (futuro)
    match /analytics/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Regras para A/B Testing
    match /experiments/{document=**} {
      allow read: if true;
      allow write: if true; // Permitir escrita pública para testes A/B
    }

    match /experiment_results/{document=**} {
      allow read: if true;
      allow write: if true;
    }

    match /experiment_assignments/{document=**} {
      allow read: if true;
      allow write: if true;
    }

    // Regras para Remarketing/FOMO
    match /pending_conversions/{document=**} {
      allow read: if true;
      allow write: if true; // Permitir escrita pública para tracking
    }

    match /remarketing_messages/{document=**} {
      allow read: if request.auth != null;
      allow write: if true;
    }

    match /fomo_notifications/{document=**} {
      allow read: if true;
      allow write: if true;
    }

    match /remarketing_stats/{document=**} {
      allow read: if true;
      allow write: if true;
    }

    match /notification_logs/{document=**} {
      allow read: if true;
      allow write: if true;
    }

    match /ab_tests/{document=**} {
      allow read: if true;
      allow write: if true;
    }

    // ==================== INSTAGRAM AUTOMATION ====================

    // Instagram Products: Produtos extraídos dos links
    match /instagram_products/{document=**} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Instagram Posts: Posts criados (drafts, scheduled, published)
    match /instagram_posts/{document=**} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Instagram Settings: Configurações do usuário (tokens, templates, etc)
    match /instagram_settings/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Instagram Analytics Daily: Métricas diárias (apenas dono lê, Cloud Functions escrevem)
    match /instagram_analytics_daily/{document=**} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
    }

    // Product Cache: Cache de scraping (24h TTL)
    match /product_cache/{document=**} {
      allow read: if true; // Cache público (otimização)
      allow write: if true; // Qualquer um pode escrever no cache
    }
  }
}